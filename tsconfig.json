{
	"compilerOptions": {
		"outDir": "./dist/",
		"sourceMap": true,
		"module": "es6",
		"target": "es5",
		"lib": [ "es6", "dom" ],
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noImplicitThis": true,
        "noUnusedLocals": true,
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
